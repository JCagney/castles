<div class="uk-margin uk-width-expand uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
  <table class="uk-table">
    <caption>
      Categories
    </caption>
    <thead>
      <th>Delete</th>
      <th>Category</th>
      <th>Description</th>
    </thead>
    <tbody class="uk-text-left">
      {{#each categories}}
      <tr>       
        <td><a href="/deletecategory/{{_id}}" class="uk-card uk-card-small uk-card-hover uk-padding-small"><i class="far fa-trash-alt fa-2x" style="color:rgb(92, 73, 79)" title="Delete {{name}}" pos="bottom" uk-tooltip></i></a></td>
        <td> {{name}} </td>    
        <td> {{description}} </td>      
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>