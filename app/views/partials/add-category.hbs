<div class="uk-margin uk-width-expand uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
  <form class="uk-form-stacked uk-text-left" action="/addcategory" method="POST">
    <legend>Add a Category</legend><br>
    <div class="uk-grid uk-grid-stack">
      <div class="uk-width-1-1@m">
        <div class="uk-margin">
          <label class="uk-form-label" for="form-stacked-text">Enter category name</label>
          <div class="uk-form-controls">
            <input class="uk-input" id="form-stacked-text" type="text" name="name" placeholder="Category" />
          </div>
        </div>
        <div class="uk-margin">
          <label class="uk-form-label" for="form-stacked-text">Enter category description</label>
          <div class="uk-form-controls">
            <input class="uk-input" id="form-stacked-text" type="text" name="description" placeholder="Description" />
          </div>
        </div>
          <div class="uk-margin">
            <button class="uk-button uk-button-primary uk-button-large uk-width-1-1">Save </button>
        </div>
      </div>     
    </div>
  </form>
</div>